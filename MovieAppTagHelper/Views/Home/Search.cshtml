@model MovieApiResponse
@{
	ViewData["Title"] = "Search";
}

<h1>Search</h1>

<div class="container">
	@if (ViewBag.errorMessages != null)
	{
		<h1 class="text-danger">@ViewBag.errorMessages</h1>
	}
	else if (!string.IsNullOrWhiteSpace(@ViewBag.searchMovie))
	{
		<p>Search results by title : @ViewBag.searchMovie (@Model.totalResults)</p>

		<div class="row">
			@foreach (Cinema item in @Model.Search)
			{
			   <div class="col-3">
				   <partial name="_MovieCardPartial" model="@item"></partial>
			   </div>
			}
		</div>
	}
	else
	{
		<p>Not results</p>
	}
</div>


